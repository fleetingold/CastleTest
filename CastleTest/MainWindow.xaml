<Window x:Class="CastleTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CastleTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Button x:Name="button" Width="80" Height="30" Content="Click me" Click="button_Click"/>
        <Button x:Name="buttonAsync" Width="80" Height="30" Content="Click me too" Click="buttonAsync_Click"/>
    </StackPanel>
</Window>
